<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- button styles-->
    <style name="label_text">
        <item name="android:textSize">@dimen/custom_button_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/custom_button_white</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="outlined_btn_label_text">
        <item name="android:textSize">@dimen/custom_button_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/custom_button_color_default</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="without_border_btn_label_text">
        <item name="android:textSize">@dimen/custom_button_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/custom_button_color_default</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


    <!-- tab styles-->
    <style name="tab_square_button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/tab_square_shape</item>
    </style>

    <style name="tab_square_shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="tab_label_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#5C48DA</item>
    </style>

    <!-- listcard styles-->
    <style name="listcard_separator">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#E71D36</item>
    </style>

    <!-- chat & mediapicker styles-->
    <style name="chat_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#0E0F10</item>
    </style>

    <style name="chat_heading">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#61656D</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="chat_priority">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#E71D36</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="chat_impact">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#C25700</item>
    </style>

    <style name="chat_variant1_description">
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/chat_variant1_text_color_primary</item>
    </style>

    <style name="chat_variant1_title">
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/chat_variant1_text_color_label</item>
    </style>


    <style name="chat_description_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#46484E</item>
    </style>

    <style name="chat_capture_issue_text">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#0E0F10</item>
    </style>

</resources>