<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant1
            android:id="@+id/chat_variant1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant2
            android:id="@+id/chat_variant2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant1" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant2
            android:id="@+id/chat_variant3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant2" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant1
            android:id="@+id/variant1_ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant3" />


        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant1
            android:id="@+id/chat_variant1_arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/variant1_ltr" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant2
            android:id="@+id/chat_variant2_arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant1_arabic" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant2
            android:id="@+id/chat_variant3_arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant2_arabic" />

        <com.example.mworkordercomponentlibrary.components.chatcomponent.ChatVariant1
            android:id="@+id/variant1_arabic_ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/chat_variant3_arabic" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
