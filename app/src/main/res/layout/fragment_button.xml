<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">


        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/flat_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/flat_button2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/flat_button1"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/flat_button3"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/flat_button1"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/flat_button4"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/flat_button2"
            app:layout_constraintStart_toEndOf="@id/flat_button3"
            />


        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:layout_marginTop="50dp"
            android:id="@+id/outlined_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flat_button3"
            />

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:layout_marginTop="50dp"
            android:id="@+id/outlined_button2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/outlined_button1"
            app:layout_constraintTop_toBottomOf="@+id/flat_button4"/>

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/outlined_button3"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/outlined_button1"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/outlined_button4"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/outlined_button2"
            app:layout_constraintStart_toEndOf="@id/outlined_button3"
            />


        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:layout_marginTop="50dp"
            android:id="@+id/transparent_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outlined_button3"
            />

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:layout_marginTop="50dp"
            android:id="@+id/transparent_button2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/transparent_button1"
            app:layout_constraintTop_toBottomOf="@+id/outlined_button4"/>

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/transparent_button3"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/transparent_button1"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.example.mworkordercomponentlibrary.components.buttoncomponent.CustomButton
            android:id="@+id/transparent_button4"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/transparent_button2"
            app:layout_constraintStart_toEndOf="@id/transparent_button3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>